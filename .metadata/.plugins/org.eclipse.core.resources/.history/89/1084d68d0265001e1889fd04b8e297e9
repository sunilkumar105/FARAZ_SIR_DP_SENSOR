#include "utilities.h"

uint8_t DP_SENSOR_ADDR = 0X25 << 1;
uint32_t i2c_RETRY_TIME = 100;

HAL_StatusTypeDef dp_sens_init(void) {
	HAL_StatusTypeDef ret;
	ret = HAL_I2C_IsDeviceReady(&DP_SENS_I2C_PORT, DP_SENSOR_ADDR, 2,
			i2c_RETRY_TIME); // is device avaialble ?
	if (ret != HAL_OK) {
		return HAL_ERROR;
	}

	HAL_I2C_Mem_Write(&DP_SENS_I2C_PORT, DP_SENSOR_ADDR, 0X36, 1, 0X1E, 1, 100);
	return HAL_OK;
}

